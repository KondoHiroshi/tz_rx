<launch>

  <node pkg = "tz_rx"
        name = "pm_power_reader_ch1"
        type = "relay.py">
    <param name = "config_file"
           value = "$(find tz_rx)/relay_conf/pm_power_reader_ch1.conf" />
  </node>

  <node pkg = "tz_rx"
        name = "pm_power_reader_ch2"
        type = "relay.py">
    <param name = "config_file"
           value = "$(find tz_rx)/relay_conf/pm_power_reader_ch2.conf" />
  </node>

  <node pkg="tz_rx" name="ml2437a" type="ml2437a_gpib.py" required="true" output="screen">
    <param name="~rate" value="0.1" />
    <param name="~rsw_id" value="0" />
    <param name="~host" value="192.168.100.44" />
    <param name="~port" value="13" />
  </node>

</launch>
